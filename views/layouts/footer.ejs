    function floatingMessage(msg){
        let fm = document.getElementById('floating-message')
        if(fm && msg != ''){
            fm.parentElement.querySelector('strong').textContent = msg
            fm.classList.add('show')
            setTimeout(function(){
                fm.classList.remove('show')
            }, 4000)
        }
    }

